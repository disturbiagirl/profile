// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String
  password String
}

model Event {
  id     Int      @id @default(autoincrement())
  title  String
  start  DateTime
  allDay Boolean
  postId Int?
}
